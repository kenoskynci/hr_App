<p id="notice"><%= notice %></p>

<h1>Listing Leave Records</h1>

<table>
  <thead>
    <tr>
      <th>Start date</th>
      <th>End date</th>
      <th>Number of days</th>
      <th>Leave type</th>
      <th>Employee</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @leave_records.each do |leave_record| %>
      <tr>
        <td><%= leave_record.start_date %></td>
        <td><%= leave_record.end_date %></td>
        <td><%= leave_record.number_Of_days %></td>
        <td><%= leave_record.leave_type %></td>
        <td><%= leave_record.employee %></td>
        <td><%= link_to 'Show', leave_record %></td>
        <td><%= link_to 'Edit', edit_leave_record_path(leave_record) %></td>
        <td><%= link_to 'Destroy', leave_record, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

